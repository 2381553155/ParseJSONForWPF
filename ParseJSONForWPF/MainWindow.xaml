<Window x:Class="ParseJSONForWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="request_button" Content="开始请求" HorizontalAlignment="Left" Margin="223,274,0,0" VerticalAlignment="Top" Width="75" Click="request_button_Click"/>
        <GroupBox Header="返回数据" HorizontalAlignment="Left" Margin="103,33,0,0" VerticalAlignment="Top" Height="97" Width="284">
            <TextBox x:Name="responseContent_Text" HorizontalAlignment="Left" Text="{Binding Text}" Height="75" Margin="0,0,-2,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" IsReadOnly="True"/>
        </GroupBox>
        
        <GroupBox Header="请求内容" HorizontalAlignment="Left" Margin="103,157,0,0" VerticalAlignment="Top" Height="97" Width="284">
            <TextBox x:Name="requestContent_Text" HorizontalAlignment="Left" Height="75" Margin="0,0,-2,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274"/>
        </GroupBox>
        
    </Grid>
</Window>
